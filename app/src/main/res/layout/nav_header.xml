<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_layout_height"
    android:background="@color/colorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_user_ava"
        android:layout_width="@dimen/user_ava_width"
        android:layout_height="@dimen/user_ava_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/avatar_placeholder"
        android:layout_marginLeft="@dimen/nav_header_margin_left"
        android:layout_marginStart="@dimen/nav_header_margin_left"/>

</RelativeLayout>